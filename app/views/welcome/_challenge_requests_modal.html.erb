<div id="challengeRequestModal" class="fixed inset-0 flex items-center justify-center z-50 hidden">
  <div class="bg-gray-800 p-8 rounded-3xl shadow-2xl w-full max-w-2xl">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-3xl font-bold text-indigo-400">Challenge Request</h3>
      <button id="closeChallengeRequest" class="text-gray-400 hover:text-gray-300">&times;</button>
    </div>
    <p class="text-white mb-6" id="challengeMessage"></p>
    <div class="flex justify-between">
      <%= form_with url: '#', method: :post, id: 'acceptChallengeForm', class: 'inline' do %>
        <%= button_tag 'Accept', class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full' %>
      <% end %>
      <%= form_with url: '#', method: :post, id: 'rejectChallengeForm', class: 'inline' do %>
        <%= button_tag 'Rejected', class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-full' %>
      <% end %>
    </div>
  </div>
</div>