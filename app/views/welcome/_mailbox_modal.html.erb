<div id="mailboxModal" class="fixed inset-0 flex items-center justify-center z-50 hidden">
  <div class="bg-neutral-800 p-8 rounded-3xl shadow-2xl w-full max-w-2xl">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-3xl font-bold text-indigo-600">Requests</h3>
      <button id="closeMailbox" class="text-gray-400 hover:text-gray-300">&times;</button>
    </div>
    <ul class="space-y-4 text-white">
      <% if @friend_requests.present? %>
        <% @friend_requests.each do |request| %>
          <li>
            <a href="#" id="request-anchor" class="text-blue-400 hover:text-blue-500" data-username="<%=request.sender.username %>" data-request-id="<%= request.id %>">
              Friend request from <%= request.sender.username %>
            </a>
          </li>
        <% end %>
      <% else %>
        <li class="text-neutral-400">No friend requests yet.</li>
      <% end %>
      <% if @challenge_requests.present? %>
        <% @challenge_requests.each do |challenge| %>
          <li>
            <a href="#" id="challenge-request-anchor" class="text-blue-400 hover:text-blue-500 challenge-request" data-username="<%=challenge.sender.username %>" data-challenge-id="<%= challenge.id %>">
              Challenge requests from <%= challenge.sender.username %>
            </a>
          </li>
        <% end %>
      <% else %>
        <li class="text-neutral-400">No Challenge requests yet.</li>
      <% end %>
    </ul>
  </div>
</div>

