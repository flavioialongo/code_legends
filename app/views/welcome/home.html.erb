<% if current_user %>

  <!-- Icona del Profilo -->
  <div id="file-icon" class="profile-icon" ondblclick="toggleProfileModal()">
    <img src="<%= asset_path('file.png') %>" alt="File Icon">
    <p>My Profile</p>
  </div>

  <div id="file-icon" class="challenge-friend-icon" ondblclick="toggleChallengeModal()">
    <img src="<%= asset_path('file.png') %>" alt="Challenge a Friend Icon">
    <p>Challenge a Friend</p>
  </div>

  <div id="file-icon" class="find-opponent-icon" ondblclick="toggleFindOpponentModal()">
    <img src="<%= asset_path('file.png') %>" alt="Find Opponent Icon">
    <p>Find Opponent</p>
  </div>

  <div id="file-icon" class="create-challenge-icon" ondblclick="navigateToCreateChallenge()">
    <img src="<%= asset_path('file.png') %>" alt="Create Challenge Icon">
    <p>Create Challenge</p>
  </div>

  <% if @current_user && @current_user.admin? %>
    <div id="file-icon" class="admin-profile-icon" ondblclick="navigateToAdminProfile()">
      <img src="<%= asset_path('file.png') %>" alt="Admin Profile Icon">
      <p>Admin Profile</p>
    </div>
  <% end %>

  <div id="file-icon" class="user-profile-icon" ondblclick="navigateToUserProfile()">
    <img src="<%= asset_path('file.png') %>" alt="User Profile Icon">
    <p>User Profile</p>
  </div>

  <!-- Finestra Modale del Profilo -->
  <%= render 'profile_modal' %>

    <!-- Modale per "Find Opponent" -->
  <div id="find-opponent-modal" class="hidden fixed inset-0 flex items-center justify-center z-50">
    <div class="relative w-[80vw] h-[80vh] bg-neutral-900 border border-gray-400 rounded-lg shadow-lg p-6">
      <!-- Header della modale con i pulsanti -->
      <header class="flex justify-between items-center bg-neutral-800 px-4 py-2 rounded-t-lg">
        <div class="flex space-x-2">
          <!-- Pulsante minimizza -->
          <button class="w-4 h-4 bg-yellow-400 rounded-full hover:bg-yellow-500"></button>
          <!-- Pulsante massimizza -->
          <button class="w-4 h-4 bg-green-400 rounded-full hover:bg-green-500"></button>
          <!-- Pulsante chiudi -->
          <button id="close-find-opponent-modal" class="w-4 h-4 bg-red-500 rounded-full hover:bg-red-600"></button>
        </div>
        <span class="text-white font-semibold">Find Opponent</span>
        <div></div>
      </header>

      <!-- Corpo della modale -->
      <div class="flex w-full h-full overflow-hidden">
        <!-- Contenuto principale -->
        <div class="flex w-4/5 flex-col space-y-8 text-[#EEEEEE] overflow-y-auto">
          <div class="flex flex-row h-1/2 space-x-8">
            <div class="flex flex-col w-1/2 space-y-8">
              <div class="flex flex-col items-center space-y-4 p-4">
                <div class="text-center mb-6">
                  <% if current_user.profile_image.attached? %>
                    <%= image_tag current_user.profile_image_thumbnail, class: "rounded-full mx-auto shadow-xl w-40 h-40 object-cover border-4 border-white" %>
                  <% else %>
                    <%= image_tag('profile-placeholder.png', alt: 'Profile Image', class: 'rounded-full mx-auto shadow-xl w-40 h-40 object-cover') %>
                  <% end %>
                </div>
                <div class="text-center">
                  <h2 class="text-2xl font-bold text-[#EEEEEE]">Player: <%= @user.username %></h2>
                </div>
              </div>
            </div>
            <div class="flex flex-col w-1/2 space-y-2 px-4">
              <h2 class="text-2xl font-semibold text-[#EEEEEE]">Your Recent Games</h2>
            </div>
          </div>
          <div class="flex flex-col space-y-2 px-4">
            <h2 class="text-2xl font-semibold text-[#EEEEEE]">Leaderboard</h2>
            <div class="border-t-2 border-white mt-2 w-full"></div>
          </div>
        </div>

        <!-- Barra laterale per selezione lingua e pulsante "Find Opponent" -->
        <div class="border-l-2 border-white h-full mt-4 w-1/5 flex flex-col p-6 space-y-6">
          <div class="flex flex-col space-y-2">
            <%= form_with url: request.path, method: :get, local: true, html: { id: 'language-form', onsubmit: "return handleLanguageFormSubmit();" } do %>
              <%= select_tag :language, options_for_select(@languages.map { |language| [language, language.downcase] }, selected: @selected_language),
                             class: "w-full px-4 py-2 rounded border border-white text-white bg-transparent focus:border-white focus:ring-0" %>
            <% end %>
          </div>

          <%= form_with url: find_opponent_path, method: :post, local: true do |form| %>
            <%= hidden_field_tag :language, @selected_language, id: 'language_field' %>
            <%= button_tag(type: 'submit', class: "relative inline-flex items-center justify-center w-full h-12 px-6 py-3 overflow-hidden font-bold rounded-full group bg-transparent text-white border-2 border-white hover:bg-white hover:text-gray-900") do %>
              <svg class="h-6 w-6 text-white-500 mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z"/>
                <polyline points="7 8 3 12 7 16" />
                <polyline points="17 8 21 12 17 16" />
                <line x1="14" y1="4" x2="10" y2="20" />
              </svg>
              Find Opponent
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute top-5 right-0 mb-4 ml-4">
    <div class="relative flex h-[30px] w-40 items-center justify-center overflow-hidden bg-transparent text-white transition-all border border-gray-400 hover:border-gray-600 before:absolute before:h-0 before:w-0 before:rounded-full before:bg-gray-600 before:duration-500 before:ease-out hover:before:h-56 hover:before:w-56 hover:before:opacity-100 font-mono">
      <%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false }, class: 'relative inline-flex items-center justify-center w-64 h-12 px-6 py-3 overflow-hidden font-bold rounded-full group bg-transparent text-white border-2 border-white hover:bg-white hover:text-gray-900' %>
    </div>
  </div>

  <div class="absolute bottom-10 right-2 mb-4 ml-4">
    <div class="relative flex h-[30px] w-40 items-center justify-center overflow-hidden bg-transparent text-white transition-all border border-gray-400 hover:border-gray-600 before:absolute before:h-0 before:w-0 before:rounded-full before:bg-gray-600 before:duration-500 before:ease-out hover:before:h-56 hover:before:w-56 hover:before:opacity-100 font-mono">
      <%= link_to 'View DB', database_info_path, class: 'relative inline-flex items-center justify-center w-64 h-12 px-6 py-3 overflow-hidden font-bold rounded-full group bg-transparent text-white border-2 border-white hover:bg-white hover:text-gray-900' %>
    </div>
  </div>

<% else %>
  <div id="file-icon" class="file-icon">
    <img src="<%= asset_path('file.png') %>" alt="File Icon">
    <p>My Terminal</p>
  </div>

  <div id="terminal-window" class="terminal-window hidden">

    <header>
      <div class="title-program">CodeLegends</div>
      <div class="button-container">
        <div class="button minus">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
          </svg>
        </div>
        <div class="button resize">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
