    <div id="notifications" class="relative h-[43px] w-[42px] flex items-center justify-center hover:bg-white/10 rounded">
      <img src="https://img.icons8.com/material-sharp/96/ffffff/bell.png" alt="bell" class="h-[24px] w-[24px]"/>
    </div>

  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<%= javascript_include_tag 'home', 'data-turbolinks-track': 'reload' %>

<script>
    function toggleProfileModal() {
        const modal = document.getElementById('profileModal');
        modal.classList.toggle('hidden');
    }

    function closeProfileModal() {
        const modal = document.getElementById('profileModal');
        modal.classList.add('hidden');
    }

    function toggleTerminal() {
        const terminal = document.getElementById('terminal-window');
        terminal.classList.toggle('hidden');
    }

    function toggleFindOpponentModal() {
        const modal = document.getElementById('find-opponent-modal');
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
        } else {
            modal.classList.add('hidden');
        }
    }

    // Chiude la modale quando si clicca sul pulsante di chiusura
    const closeModalButton = document.getElementById('close-find-opponent-modal');
    closeModalButton.addEventListener('click', () => {
        const modal = document.getElementById('find-opponent-modal');
        modal.classList.add('hidden');
    });

    function handleLanguageFormSubmit() {
        // Non fare ricaricare la pagina
        event.preventDefault();

        // Ottieni il form e il selettore
        const form = document.getElementById('language-form');
        const languageSelect = form.querySelector('select[name="language"]');

        // Ottieni il valore selezionato
        const selectedLanguage = languageSelect.value;

        // Esegui la richiesta AJAX per aggiornare la lingua
        fetch(form.action, {
            method: form.method,
            body: new URLSearchParams(new FormData(form)),
            headers: {
                'Accept': 'application/json',
            },
        }).then(response => response.json())
            .then(data => {
                // Aggiorna il contenuto se necessario
                console.log(data);

                // Mantieni aperta la modale
                toggleFindOpponentModal();
            }).catch(error => console.error('Error:', error));

        return false;
    }

</script>
