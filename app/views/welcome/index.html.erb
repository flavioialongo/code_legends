<div class="container">

  <section class="flex items-center justify-center min-h-screen bg-gray-800 bg-opacity-70">
    <div class="text-center px-4">
      <h1 class="text-6xl font-bold mb-6">Code Legends</h1>
      <p class="text-2xl mb-12">Benvenuto nel sito di duelli di programmazione definitivo!</p>
      <div>
        <a href="#login" class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded transition duration-300">Login</a>
        <a href="#register" class="bg-green-600 hover:bg-green-800 text-white font-bold py-3 px-6 rounded ml-4 transition duration-300">Registrati</a>
      </div>
    </div>
  </section>

  <!-- Start Match Section -->
  <section class="flex items-center justify-center min-h-screen bg-gray-700 bg-opacity-70">
    <div class="text-center px-4">
      <h2 class="text-5xl font-bold mb-6">Inizia una nuova partita</h2>
      <button class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-3 px-8 rounded transition duration-300">Avvia una partita</button>
    </div>
  </section>

  <!-- Leaderboard Section -->
  <section class="flex items-center justify-center min-h-screen bg-gray-600 bg-opacity-70">
    <div class="w-full max-w-4xl px-4">
      <h2 class="text-5xl font-bold text-center mb-12">Classifica</h2>
      <div class="overflow-x-auto">
        <table class="table-auto w-full text-left bg-gray-700 rounded-lg shadow-lg">
          <thead>
          <tr class="bg-gray-800">
            <th class="px-6 py-3">Posizione</th>
            <th class="px-6 py-3">Nome</th>
            <th class="px-6 py-3">Punti</th>
          </tr>
          </thead>
          <tbody>
          <!-- Placeholder data -->
          <tr class="bg-gray-800 odd:bg-gray-700">
            <td class="border-t border-gray-800 px-6 py-4">1</td>
            <td class="border-t border-gray-800 px-6 py-4">Mario Rossi</td>
            <td class="border-t border-gray-800 px-6 py-4">1500</td>
          </tr>
          <tr class="bg-gray-800 odd:bg-gray-700">
            <td class="border-t border-gray-800 px-6 py-4">2</td>
            <td class="border-t border-gray-800 px-6 py-4">Luigi Verdi</td>
            <td class="border-t border-gray-800 px-6 py-4">1400</td>
          </tr>
          <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Create New Challenge Section -->
  <section class="flex items-center justify-center min-h-screen bg-gray-700 bg-opacity-70">
    <div class="text-center px-4">
      <h2 class="text-5xl font-bold mb-6">Crea una nuova sfida</h2>
      <%= link_to 'Crea Sfida', new_challenge_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded transition duration-300' %>
    </div>
  </section>

  <!-- Profile Navigation Section -->
  <section class="flex items-center justify-center min-h-screen bg-gray-600 bg-opacity-70">
    <div class="flex justify-center space-x-4 mt-4">
      <%= link_to "User Profile", profile_path, class: "bg-blue-600 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded transition duration-300" %>
      <%= link_to "Admin Profile", admin_profile_path, class: "bg-red-600 hover:bg-red-800 text-white font-bold py-3 px-6 rounded transition duration-300" %>
    </div>
  </section>

  <!-- Pulsante per visualizzare le informazioni sul database -->
  <div class="flex justify-center mt-6">
    <%= link_to 'Visualizza Tabelle DB', database_info_path, class: 'bg-blue-600 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded transition duration-300' %>
  </div>

  <!-- Footer -->
  <footer class="text-center py-4 bg-gray-800 bg-opacity-70">
    <p>&copy; 2024 Code Legends. Tutti i diritti riservati.</p>
  </footer>
</div>
