<div id="requestModal" class="fixed inset-0 flex items-center justify-center z-50 hidden">
  <div class="bg-gray-800 p-8 rounded-3xl shadow-2xl w-full max-w-2xl">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-3xl font-bold text-indigo-600">Friend Request</h3>
      <button id="closeRequest" class="text-neutral-400 hover:text-neutral-300">&times;</button>
    </div>
    <p class="text-white mb-6" id="requestMessage"></p>
    <div class="flex justify-between">
      <%= form_with url: '#', method: :post, id: 'acceptRequestForm', class: 'inline' do %>
        <%= button_tag 'Accept', class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full' %>
      <% end %>
      <%= form_with url: '#', method: :post, id: 'rejectRequestForm', class: 'inline' do %>
        <%= button_tag 'Reject', class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-full' %>
      <% end %>
    </div>
  </div>
</div>