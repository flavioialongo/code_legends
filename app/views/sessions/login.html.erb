<!-- app/views/sessions/new.html.erb -->
<div class="flex flex-col items-center justify-center min-h-screen bg-gray-900 text-gray-200">
  <h1 class="text-3xl font-bold mb-8">Login</h1>

  <!-- Email/Password Login Form -->
  <div class="bg-gray-800 p-8 shadow-md rounded-lg w-full max-w-md mb-8">
    <h2 class="text-xl font-semibold mb-4">Log in with Email</h2>

    <%= form_with url: login_post_path, method: :post, local: true, class: 'space-y-6' do |form| %>
      <div class="flex flex-col space-y-2">
        <%= form.label :email, "Email", class: "text-sm font-medium text-gray-300" %>
        <%= form.email_field :email, required: true, class: "block w-full px-4 py-2 border border-gray-700 bg-gray-900 text-gray-200 rounded-lg" %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :password, "Password", class: "text-sm font-medium text-gray-300" %>
        <%= form.password_field :password, required: true, class: "block w-full px-4 py-2 border border-gray-700 bg-gray-900 text-gray-200 rounded-lg" %>
      </div>

      <div class="flex justify-center">
        <%= form.submit 'Log in', class: 'bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700' %>
      </div>
    <% end %>
  </div>

  <!-- OAuth Login via Auth0 -->
  <div class="flex flex-col items-center">
    <h2 class="text-xl font-semibold mb-4">Or log in with:</h2>

    <!-- Auth0 OAuth Button -->
    <%= button_to 'OAUTH', '/auth/auth0/', method: :post, data: { turbo: false }, class: 'bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700' %>
  </div>

  <!-- Don't have an account link -->
  <p class="text-gray-400">Don't have an account? <%= link_to 'Sign up', signup_path, class: 'text-blue-400 hover:underline' %></p>
</div>
