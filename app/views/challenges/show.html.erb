<div class="w-full mx-auto p-8 bg-gray-800 rounded-lg shadow-md overflow-auto">
  <h2 class="text-2xl font-bold text-white mb-4">Challenge Details</h2>

  <!-- Challenge Title -->
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-white">Title:</h3>
    <p class="text-gray-300"><%= @challenge.title %></p>
  </div>

  <!-- Challenge Description -->
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-white">Description:</h3>
    <p class="text-gray-300"><%= @challenge.description %></p>
  </div>

  <!-- Challenge Language -->
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-white">Language:</h3>
    <p class="text-gray-300"><%= @challenge.language %></p>
  </div>

  <!-- Challenge Difficulty -->
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-white">Difficulty:</h3>
    <p class="text-gray-300"><%= @challenge.difficulty %></p>
  </div>

  <!-- Code Skeleton Display -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-white">Code Skeleton</h3>
    <div id="code_skeleton_display" class="w-full p-4 bg-gray-700 text-white rounded-lg">
      <pre><%= @challenge.code_template.html_safe %></pre>
    </div>
  </div>

  <!-- Test Skeleton Display -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-white">Test Skeleton</h3>
    <div id="test_skeleton_display" class="w-full p-4 bg-gray-700 text-white rounded-lg">
      <pre><%= @challenge.test_template.html_safe %></pre>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-end space-x-4">
    <%= link_to 'Edit Challenge', edit_challenge_path(@challenge), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    <%= link_to 'Back to List', admin_path(current_user), class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>
</div>
