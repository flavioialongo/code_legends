<div id="file-icon" class="profile-icon" ondblclick="toggleProfileModal()">
  <img src="<%= asset_path('file.png') %>" alt="File Icon">
  <p>My Profile</p>
</div>

<div id="file-icon" class="challenge-friend-icon" ondblclick="toggleChallengeModal()">
  <img src="<%= asset_path('file.png') %>" alt="Challenge a Friend Icon">
  <p>Challenge a Friend</p>
</div>

<div id="file-icon" class="find-opponent-icon" ondblclick="gotoPlayNow()">
  <img src="<%= asset_path('file.png') %>" alt="Find Opponent Icon">
  <p>Find Opponent</p>
</div>

<div id="file-icon" class="create-challenge-icon" ondblclick="navigateToCreateChallenge()">
  <img src="<%= asset_path('file.png') %>" alt="Create Challenge Icon">
  <p>Create Challenge</p>
</div>

<% if @current_user && @current_user.admin? %>
  <div id="file-icon" class="admin-profile-icon" ondblclick="navigateToAdminProfile()">
    <img src="<%= asset_path('file.png') %>" alt="Admin Profile Icon">
    <p>Admin Profile</p>
  </div>
<% end %>

<div id="file-icon" class="user-profile-icon" ondblclick="navigateToUserProfile()">
  <img src="<%= asset_path('file.png') %>" alt="User Profile Icon">
  <p>User Profile</p>
</div>

<div id="window" class="window">
  <header>
    <div class="title-program">CodeLegends</div>
    <div class="button-container">
      <div class="button minus">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
        </svg>
      </div>
      <div class="button resize">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 8.25V6a2.25 2.25 0 0 0-2.25-2.25H6A2.25 2.25 0 0 0 3.75 6v8.25A2.25 2.25 0 0 0 6 16.5h2.25m8.25-8.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-7.5A2.25 2.25 0 0 1 8.25 18v-1.5m8.25-8.25h-6a2.25 2.25 0 0 0-2.25 2.25v6" />
        </svg>
      </div>
      <div class="button exit" id="close-terminal-button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
    </div>
  </header>

  <section class="terminal">
    <div class="container mx-auto h-screen overflow-auto">
      <section class="flex items-center justify-center min-h-full bg-gradient-to-br from-gray-900 to-gray-700 bg-opacity-80">
        <div class="text-center px-8 py-16 w-full max-w-3xl">
          <h2 class="text-5xl font-extrabold mb-12 text-white">Crea una nuova sfida</h2>

          <%= form_with url: challenges_path, model: @challenge, method: :post, class: "bg-gray-800 p-12 rounded-2xl shadow-2xl" do |f| %>

            <div class="mb-10">
              <%= f.label :description, "Descrizione dell'esercizio", class: "block text-white text-left text-xl font-semibold mb-4" %>
              <%= f.text_area :description, rows: 4, class: "w-full px-4 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none resize-none transition duration-300 ease-in-out transform hover:scale-105" %>
            </div>

            <div class="mb-6">
              <h3 class="text-3xl text-center text-white mb-8 font-semibold">Input e Output Attesi</h3>

              <div id="input-output-pairs" class="space-y-10">
                <%= f.fields_for :test_cases do |test_case|  %>
                  <div class="test_case_fields">
                    <%= render 'test_case_fields', f: test_case %>
                  </div>

                <% end %>
              </div>

              <div class="text-center mt-16 mb-6">
                <button type="button" id="add-test-case" class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-8 rounded-full transition duration-300 transform hover:scale-110">Aggiungi un'altra coppia</button>
              </div>
            </div>

            <div class="flex justify-center mt-8 space-x-8">
              <%= f.submit "Propose", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-110" %>
              <%= link_to "Quit", play_now_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-110" %>
            </div>

          <% end %>
        </div>
      </section>
    </div>
  </section>
</div>

<div class="play-now">
  <div id="waiting_modal"></div>
</div>

<div class="taskbar fixed bottom-0 left-0 w-screen h-[43px] bg-neutral-900 border-t border-gray-400 z-[9999] flex items-center justify-between">

  <div class="icons-left flex items-center space-x-[-4px]">
    <div id="start-menu" class="relative h-[43px] w-[48px] flex items-center justify-center">
      <i class="fab fa-windows text-white text-[21px]"></i>
    </div>

    <div id="search" class="h-[43px] w-[49px] flex items-center justify-center hover:bg-white/10 rounded">
      <img src="data:image/png;base64," alt="search" class="h-[24px] w-[24px]" />
    </div>

    <div class="px h-[43px] w-1"></div>
  </div>

  <div class="icons-right flex items-center space-x-[-4px]">
    <div id="sound" class="h-[43px] w-[49px] flex items-center justify-center hover:bg-white/5 p-1">
      <img src="https://img.icons8.com/ios-glyphs/90/ffffff/speaker.png" alt="speaker" class="h-[22px] w-[22px]" />
    </div>

    <div class="datetime text-center w-[70px] cursor-pointer hover:bg-white/10 rounded">
      <span id="current-time" class="hour block text-white text-[11.3px]"></span>
      <span id="current-date" class="date block text-white text-[11.3px]"></span>
    </div>

    <div id="notifications" class="relative h-[43px] w-[42px] flex items-center justify-center hover:bg-white/10 rounded">
      <img src="https://img.icons8.com/material-sharp/96/ffffff/bell.png" alt="bell" class="h-[24px] w-[24px]"/>
    </div>

  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const closeButton = document.getElementById('close-terminal-button');

        closeButton.addEventListener('click', function() {
            document.getElementById('window').style.display = 'none';
            window.location.href = '/';
        });
    });

    updateDateTime();
    setInterval(updateDateTime, 1000);

    function updateDateTime() {
        const now = new Date();
        const hours = now.getHours().toString().padStart(2, '0');
        const minutes = now.getMinutes().toString().padStart(2, '0');
        document.getElementById('current-time').textContent = `${hours}:${minutes}`;

        const day = now.getDate().toString().padStart(2, '0');
        const month = (now.getMonth() + 1).toString().padStart(2, '0');
        const year = now.getFullYear();
        document.getElementById('current-date').textContent = `${day}/${month}/${year}`;
    }

    const container = document.getElementById('input-output-pairs');
    let index = container.querySelectorAll('.added-test-case').length; // Start from the number of existing cases

    document.getElementById('add-test-case').addEventListener('click', function(event) {
        event.preventDefault();

        // Increment the index for the new test case
        index++;

        const newTestCaseHTML = `
            <div class="added-test-case flex justify-center space-x-8 mb-6">
                <div class="w-1/2 flex flex-row content-start">
                    <div class="flex flex-col justify-center">
                        <label for="challenge_test_cases_attributes_${index}_input_example" class="block text-white text-center text-xl font-semibold mb-2">Input</label>
                        <input type="text" name="challenge[test_cases_attributes][${index}][input_example]" id="challenge_test_cases_attributes_${index}_input_example" class="w-full px-6 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" />
                    </div>
                    <div class="flex flex-col justify-center">
                        <label for="challenge_test_cases_attributes_${index}_input_type" class="block ml-5 text-white text-center text-xl font-semibold mb-2">Type</label>
                        <select name="challenge[test_cases_attributes][${index}][input_type]" id="challenge_test_cases_attributes_${index}_input_type" class="w-full ml-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105">
                            <option value="string">String</option>
                            <option value="integer">Integer</option>
                            <option value="float">Float</option>
                            <option value="boolean">Boolean</option>
                        </select>
                    </div>
                </div>
                <div class="w-1/2 flex flex-row">
                    <div class="flex flex-col justify-center">
                        <label for="challenge_test_cases_attributes_${index}_expected_output" class="block text-white text-center text-xl font-semibold mb-2">Output</label>
                        <input type="text" name="challenge[test_cases_attributes][${index}][expected_output]" id="challenge_test_cases_attributes_${index}_expected_output" class="w-full px-6 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" />
                    </div>
                    <div class="flex flex-col justify-center">
                        <label for="challenge_test_cases_attributes_${index}_output_type" class="block text-white text-center text-xl font-semibold mb-2">Type</label>
                        <select name="challenge[test_cases_attributes][${index}][output_type]" id="challenge_test_cases_attributes_${index}_output_type" class="w-full ml-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105">
                            <option value="string">String</option>
                            <option value="integer">Integer</option>
                            <option value="float">Float</option>
                            <option value="boolean">Boolean</option>
                        </select>
                    </div>
                </div>
            </div>
        `;

        container.insertAdjacentHTML('beforeend', newTestCaseHTML);
    });

    function clearForm() {
        const form = document.querySelector('form');
        if (form) {
            form.reset(); // Reset form fields
            // Optionally, remove all dynamically added test cases
            container.querySelectorAll('.added-test-case').forEach(testCase => testCase.remove());
            index = 0; // Reset the index
        }
    }

    clearForm();
</script>
