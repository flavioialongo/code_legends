<div class="container">

  <section class="flex items-center justify-center min-h-screen bg-gray-700 bg-opacity-70">
    <div class="text-center px-4 w-full max-w-lg">
      <h2 class="text-5xl font-bold mb-6">Crea una nuova sfida</h2>

      <%= form_with model: @challenge, local: true, class: "bg-gray-800 p-8 rounded-lg shadow-lg" do |f| %>

        <div class="mb-6">
          <%= f.label :description, "Descrizione dell'esercizio", class: "block text-white text-left text-xl mb-2" %>
          <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 rounded-lg bg-gray-600 text-white" %>
        </div>

        <div class="mb-6">
          <%= f.label :input_example, "Esempio di Input", class: "block text-white text-left text-xl mb-2" %>
          <%= f.text_area :input_example, rows: 2, class: "w-full px-4 py-2 rounded-lg bg-gray-600 text-white" %>
        </div>

        <div class="mb-6">
          <%= f.label :expected_output, "Output Atteso", class: "block text-white text-left text-xl mb-2" %>
          <%= f.text_area :expected_output, rows: 2, class: "w-full px-4 py-2 rounded-lg bg-gray-600 text-white" %>
        </div>

        <div class="flex justify-between">
          <%= f.submit "Propose", class: "bg-green-600 hover:bg-green-800 text-white font-bold py-3 px-8 rounded transition duration-300" %>
          <%= link_to "Quit", root_path, class: "bg-red-600 hover:bg-red-800 text-white font-bold py-3 px-8 rounded transition duration-300" %>
        </div>

      <% end %>
    </div>
  </section>

</div>
