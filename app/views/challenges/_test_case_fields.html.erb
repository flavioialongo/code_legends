<div class="flex justify-center space-x-8 mb-6">
  <div class="w-1/2 flex flex-row content-start">
    <div class="flex flex-col justify-center">
      <%= f.label :input_example, "Input", class: "block text-white text-center text-xl font-semibold mb-2" %>
      <%= f.text_field :input_example, class: "w-full px-6 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
    <div class="flex flex-col justify-center">
      <%= f.label :input_type, "Type", class: "block ml-5 text-white text-center text-xl font-semibold mb-2" %>
      <%= f.select :input_type, options_for_select([['String', 'string'], ['Integer', 'integer'], ['Float', 'float'], ['Boolean', 'boolean']]), {}, class: " w-full ml-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
    <!-- Input Data Type Selection -->
  </div>
  <div class="w-1/2 flex flex-row">
    <div class="flex flex-col justify-center">
      <%= f.label :expected_output, "Output", class: "block text-white text-center text-xl font-semibold mb-2" %>
      <%= f.text_field :expected_output, class: "w-full px-6 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
    <div class="flex flex-col justify-center">
      <%= f.label :output_type, "Type", class: "block ml-5 text-white text-center text-xl font-semibold mb-2" %>
      <%= f.select :output_type, options_for_select([['String', 'string'], ['Integer', 'integer'], ['Float', 'float'], ['Boolean', 'boolean']]), {}, class: " w-full ml-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-4 focus:ring-blue-500 focus:border-transparent focus:outline-none transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  </div>
</div>