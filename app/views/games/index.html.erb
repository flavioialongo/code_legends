<%= form_with(url: execute_code_games_path, method: :post, data: { turbo: true }, id: 'execute-form', class: "container") do |form| %>
  <div class="flex flex-row justify-center content-center py-20 h-screen bg-gradient-to-r from-gray-800 via-gray-900 to-black w-screen">

    <div class="p-6 flex flex-col justify-center space-y-4 text-white">
        <!-- Box Selezione Linguaggio -->
        <div class="bg-[#4E31AA] p-4 rounded-lg shadow-md flex flex-col">
          <h2 class="text-lg font-bold mb-2">Scegli un Linguaggio di Programmazione</h2>
          <%= select_tag :language, options_for_select([['Python', 'python3'], ['Java', 'java'], ['C++', 'cpp']], @selected_language), class: "w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white", id: "language-selector" %>
        </div>

        <!-- Box Codice -->
        <div class="flex flex-col bg-black p-4 rounded-lg h-4/6 shadow-md ">
          <h2 class="text-lg font-bold text-center">CODICE</h2>
          <div class="overflow-auto my-5 h-5/6 shadow-md">
            <div id="code-editor" class="bg-gray-600 w-full h-full">
            <%= hidden_field_tag :code, '', id: 'hidden-code-input' %>
            </div>
          </div>
        </div>

        <!-- Box Console -->

        <div class="flex flex-col justify-center bg-black p-4 rounded-lg shadow-md h-4/6">
          <h2 class="text-lg font-bold text-center">CONSOLE</h2>
          <div class="bg-gray-600 text-white mt-2 mb-5 h-5/6 overflow-auto">
            <div id="output" class=" w-full ">
              <turbo-frame id="console-output">
                <!-- Initial content of the console -->
              </turbo-frame>
            </div>
          </div>
        </div>
    </div>
      <!-- Sezione a Destra -->
      <div class="w-1/5 p-6 flex flex-col space-y-6 justify-center">
        <%= submit_tag "Run Code", class: "mt-4 px-4 py-2 bg-green-500 text-white rounded hover:bg-blue-600 w-full" %>
        <!-- Box Chat -->
        <div class="bg-black p-4 rounded-lg shadow-md h-2/5 pb-11">
          <h2 class="text-lg font-bold text-center">CHAT</h2>
          <div class="bg-gray-800 text-white mt-2 h-5/6 overflow-auto">
            <div id="output" class="bg-gray-600 w-full h-full">

            </div>
          </div>
        </div>
        <%= submit_tag "Surrend", class: "mt-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-blue-600 w-full" %>
      </div>
    </div>

  <% end %>