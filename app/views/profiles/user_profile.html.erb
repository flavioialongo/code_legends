<div class="container mx-auto h-screen overflow-auto">
  <section class="flex items-center justify-center min-h-full bg-gradient-to-br from-gray-800 to-gray-600 bg-opacity-70">
    <div class="flex flex-col md:flex-row w-full max-w-6xl p-8 space-y-8 md:space-y-0 md:space-x-8">

      <!-- Sezione Informazioni Utente -->
      <div class="w-full md:w-1/3 bg-gray-900 p-6 rounded-xl shadow-xl max-h-[400px] md:max-h-[500px] overflow-y-auto">
        <div class="text-center mb-6">
          <h2 class="text-4xl font-extrabold text-white">Profilo Utente</h2>
        </div>
        <div class="text-center mb-6">
          <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image_thumbnail, class: "rounded-full mx-auto" %>
          <% else %>
            <img src="https://via.placeholder.com/150" alt="Profile Image" class="rounded-full mx-auto">
          <% end %>
        </div>
        <div class="text-left">
          <h3 class="text-2xl font-bold mb-4 text-blue-400">Informazioni Utente</h3>
          <p class="text-lg text-white mb-2"><strong>Nome:</strong> <%= current_user.name %></p>
          <p class="text-lg text-white mb-2"><strong>Email:</strong> <%= current_user.email %></p>
        </div>

        <!-- Pulsante per accedere alle impostazioni -->
        <div class="mt-6 text-center">
          <%= link_to 'Impostazioni Profilo', edit_settings_path, class: 'bg-green-600 hover:bg-green-800 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out shadow-lg' %>
        </div>
      </div>

      <!-- Sezione Proposte Utente -->
      <div class="w-full md:w-2/3 space-y-8">

        <!-- Proposte Accettate -->
        <div>
          <h3 class="text-3xl font-bold mb-6 text-green-400">Proposte Accettate</h3>
          <table class="w-full bg-gray-800 border border-gray-700 rounded-xl shadow-xl mb-12">
            <thead>
            <tr class="bg-gray-900">
              <th class="px-6 py-4 text-center text-lg font-semibold text-white">Descrizione</th>
              <th class="px-6 py-4 text-center text-lg font-semibold text-white">Test Case</th>
            </tr>
            </thead>
            <tbody>
            <% @accepted_challenges.each do |challenge| %>
              <tr class="border-b border-gray-700">
                <td class="px-6 py-4 text-white break-words"><%= challenge.description %></td>
                <td class="px-6 py-4 text-white">
                  <ul class="list-disc list-inside">
                    <% challenge.test_cases.each do |test_case| %>
                      <li class="mb-2 break-words">Input: <%= test_case.input_example %>, Output: <%= test_case.expected_output %></li>
                    <% end %>
                  </ul>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <!-- Proposte Rifiutate -->
        <div>
          <h3 class="text-3xl font-bold mb-6 text-red-400">Proposte Rifiutate</h3>
          <table class="w-full bg-gray-800 border border-gray-700 rounded-xl shadow-xl mb-12">
            <thead>
            <tr class="bg-gray-900">
              <th class="px-6 py-4 text-center text-lg font-semibold text-white">Descrizione</th>
              <th class="px-6 py-4 text-center text-lg font-semibold text-white">Test Case</th>
              <th class="px-6 py-4 text-center text-lg font-semibold text-white">Motivo del Rifiuto</th>
            </tr>
            </thead>
            <tbody>
            <% @rejected_challenges.each do |challenge| %>
              <tr class="border-b border-gray-700">
                <td class="px-6 py-4 text-white break-words"><%= challenge.description %></td>
                <td class="px-6 py-4 text-white">
                  <ul class="list-disc list-inside">
                    <% challenge.test_cases.each do |test_case| %>
                      <li class="mb-2 break-words">Input: <%= test_case.input_example %>, Output: <%= test_case.expected_output %></li>
                    <% end %>
                  </ul>
                </td>
                <td class="px-6 py-4 text-white break-words"><%= challenge.rejection_reason %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <div class="mt-12">
          <%= link_to 'Torna alla Home', root_path, class: 'bg-blue-600 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-full transition duration-300 ease-in-out shadow-lg' %>
        </div>
      </div>

    </div>
  </section>
</div>
