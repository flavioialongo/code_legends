<div class="w-[330px] absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
  <div class="relative w-[320px] bg-white shadow-lg rounded-lg">
    <div class="w-full bg-slate-200 p-4 rounded-lg shadow-lg">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-blue-500 relative inline-block">
          Reset Password
          <span class="absolute inset-0 flex items-center justify-center">
            <span class="block w-full h-1 bg-gradient-to-r from-[#87314e] to-[#df405a] opacity-50 rounded-full transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out"></span>
          </span>
        </h1>
      </div>
      <%= form_with url: password_reset_path, method: :post, local: true, class: 'space-y-6' do |form| %>
        <div class="flex flex-col">
          <label for="email" class="text-gray-700 text-sm font-medium">E-mail</label>
          <%= form.email_field :email, required: true, class: "mt-1 h-12 px-4 bg-gray-100 border rounded-lg text-gray-800 text-base shadow-sm focus:bg-[#f8f8c6] focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <span class="i i-warning hidden absolute right-0 top-1/2 transform -translate-y-1/2"></span>
        </div>
        <p class="text-gray-700 text-sm mt-4">If the email you entered is associated with an account, you will receive instructions on how to reset your password shortly.</p>
        <%= form.submit 'Send Reset Instructions', class: 'w-full h-12 mt-4 bg-blue-500 text-white font-bold rounded-lg shadow-md cursor-pointer hover:bg-blue-600' %>
      <% end %>
      <div class="flex justify-center margint">
        <%= link_to 'Return to Login', login_path, class: 'text-blue-500 hover:underline mt-4' %>
      </div>
    </div>
  </div>
</div>
